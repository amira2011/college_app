<h2>Students List</h2>
 

<div class="row">

  <div class="col-12">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <%= link_to 'Add Student', 'students/new', class:'btn btn-primary'%>
        </tr>

        <tr>
          <th scope="col">Name</th>
          <th scope="col">Admission_Year</th>
          <th scope="col">Category</th>
          <th scope="col">Branch</th>
          <th scope="col">Mobile</th>
          <th scope="col">Action</th>

        </tr>
      </thead>



      <tbody>
        <% @students.each do |s| %>
        <tr>
          <th scope="row"><%= s.name %></th>
          <td><%= s.admission_year %></td>
          <td><%= s.category %></td>
          <td><%= s.branch %></td>
          <td><%= s.mobile %></td>

          <td><%= link_to 'Remove' ,  '#',    data: {confirm:'Are you sure?'}, class: "btn btn-sm btn-warning" %></td>
        </tr>
         <% end %>
      </tbody>
    </table>

  </div>
</div>
